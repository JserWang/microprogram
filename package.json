{
  "name": "microprogram-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/parser": "^4.20.0",
    "chalk": "^4.1.0",
    "eslint": "^7.23.0",
    "eslint-define-config": "^1.0.7",
    "eslint-plugin-node": "^11.1.0",
    "lint-staged": "^10.5.4",
    "minimist": "^1.2.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  }
}
